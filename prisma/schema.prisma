generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())

  clerkId  String @unique
  email    String @unique
  username String? @unique

  firstName String?
  lastName  String?
  avatarUrl String?
  bio       String? @db.VarChar(380)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
